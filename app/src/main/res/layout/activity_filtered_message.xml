<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".FilteredMessageActivity">

    <include
        android:id="@+id/filtered_tool_bar"
        layout="@layout/layout_tool_bar" />

    <EditText
        android:id="@+id/filtered_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@drawable/background_edit_text"
        android:hint="@string/filtre_girin"
        android:inputType="text"
        android:maxLength="160"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />

    <Button
        android:id="@+id/button_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"
        android:text="@string/filtrele"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/filtered_input_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:background="@drawable/background_edit_text"
        android:gravity="start"
        android:hint="@string/mesaj_girin"
        android:inputType="text|textMultiLine"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />


    <Button
        android:id="@+id/send_filtered_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="10dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"
        android:text="@string/gÃ¶ndermeyi_baslat"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />

</LinearLayout>